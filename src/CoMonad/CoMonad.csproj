		</Compile>
		<Compile Update="DUnion.cs">
			<DependentUpon>DUnion.tt</DependentUpon>
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
		</Compile>
	</ItemGroup>

	<ItemGroup>
