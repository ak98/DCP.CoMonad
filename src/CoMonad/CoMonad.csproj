		<PackageIcon>comonadlogo256.png</PackageIcon>
		<Authors>DCP</Authors>
		<Company>DCP</Company>
		<PackageId>DCP.CoMonad</PackageId>
		<PackageReleaseNotes></PackageReleaseNotes>
		<PackageTags>functional,monad,monadic,</PackageTags>
